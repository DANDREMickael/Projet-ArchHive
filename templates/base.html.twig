<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}ArchHive : emprunt de livres simple et efficace !!{% endblock %}</title>
        <link rel="icon" type="image/png" href="{{ asset('build/img/favicon.png') }}"/>
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.9.2/dist/umd/popper.min.js" integrity="sha384-IQsoLXl5PILFhosVNubq5LC7Qb9DXgDA9i+tQ8Zj3iwWAwPtgFTxbJ8NT4GN1R8p" crossorigin="anonymous"></script>
            <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.min.js" integrity="sha384-cVKIPhGWiC2Al4u+LWgxfKTRIcfu0JTxR+EQDz/bgldoEyl4H0zUF0QKbrJ0EcQF" crossorigin="anonymous"></script>
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body class="mainbody">

        <!-- Interactions entre le header et la sidebar  -->
        <div  class="headersidebar">

            <div class="header fixed-top">
                {{include('partials/_header.html.twig')}}
            </div>

            <!-- Interactions entre la sidebar et le contenu-->
            <div class="sidebarbody">

                <div class="sidebar">
                    {{include('partials/_sidebar.html.twig')}}
                </div>

                <!-- Interactions entre le contenu et le footer -->
                <div class="bodyfooter">

                    <div class="allbodies" id="style-7">
                        <div class="scrollbar">
                            <div class="force-overflow">
                                {% block body %}

                                    {% for label, messages in app.flashes %} {# Affichage message flash #}
                                        {% for message in messages %}
                                            <div class="flash-{{ label }}">
                                                {{ message }}
                                            </div>
                                        {% endfor %}
                                    {% endfor %}

                                {% endblock %}
                            </div>
                        </div>
                    </div>
                    
                    <div class="footer">
                        {{include('partials/_footer.html.twig')}}
                    </div>
                </div>
            </div>
        </div>
    </body>  
</html>