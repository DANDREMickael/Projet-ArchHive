{% extends "base.html.twig" %}

{% block title %}
    Se connecter : accès à mon compte.
{% endblock %}

{% block body %} 

{% if app.user %}
	<div class="mb-3">
		Vous êtes connecté, {{ app.user.userIdentifier }} ! 
		<a href="{{ path('logout') }}">Se déconnecter</a>
	</div>
{% endif %}

<div class="bgconnec">
<div class="container" style="margin: 5%;">
	<h3>Connexion : identifiez-vous.</h3>
</div>

<div class="container">
	<form action="{{ path('connexion') }}" method="post">

		<div class="form-row">
			<label for="inputEmail">Votre email :</label>
			<input type="email" placeholder="Exemple : michel.dupont@laposte.fr" value="{{ last_username }}" name="_username" id="username" required autofocus>
		</div>

		<div class="form-row">
			<label for="inputPassword">Votre mot de passe :</label>
			<input type="password" name="_password" id="mot_de_passe" required>
		</div>

		<div class="form-row">
			<label>
				<input type="checkbox" name="_remember_me">
				Se souvenir de moi
			</label>
		</div>

		{% if error %}

			<ul class="form-errors mb-20">
				<li>{{ error.messageKey|trans(error.messageData, 'security') }}</li>
			</ul>

		{% endif %}

		<input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
		<button class="btn btn-primary mr-10">Connectez-vous !</button>
		<small>
			<a href="{{ path('inscription') }}">Pas encore inscrit(e) ?</a>
		</small>
	</form>
</div>

</div>

{% endblock %}