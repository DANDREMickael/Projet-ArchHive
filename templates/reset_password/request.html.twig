{% extends 'base.html.twig' %}

{% block title %}Demande de réinitialisation du mot du passe{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}

    <div class="container requestresetform">	

        <div class="container" style="margin: 5%;">
            <h3>Changer mon mot de passe</h3>
        </div>

        <div class="container">
            {{ form_start(resetrequestForm) }}
                {{ form_row(resetrequestForm.email) }}
                <div>
                    <small>
                        Veuillez fournir votre adresse email et nous vous enverrons 
                        un lien de réinitialisation de votre mot de passe.
                    </small>
                </div>

                <button class="btn btn-primary">Confirmer mon email</button>
            {{ form_end(resetrequestForm) }}
        </div>
    </div>
{% endblock %}
